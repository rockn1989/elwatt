<!-- begin header-fixed -->
<div id="header-boundry-fixed" class="header-fixed uk-visible@l" uk-sticky="top: #sticky-header; animation: uk-animation-slide-top; cls-active: uk-active">
	<div class="uk-container">
		<div class="uk-grid uk-grid-collapse">
			<div class="uk-width-auto">
				<div class="uk-flex uk-flex-middle">
					<a href="/" class="logo">
						<img src="img/logo.svg" width="100" height="32" alt="Elwatt">
						<span class="logo__slogan">
							Более 15 лет
							<br>
							на рынке
							<br>
							электрики
						</span>
					</a>
					<div class="header-nav-buttons">
						<div class="header-nav-buttons__item">
							<a href="" class="btn btn--icon">
								<svg width="12px" height="12px" class="icon-catalog">
									<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#catalog"></use>
								</svg>
								<span>Каталог товаров</span>
							</a>
							<div class="dropdown-menu" uk-dropdown="pos: bottom-justify; offset: 0; boundary: #header-boundry-fixed; boundary-align: true; delay-hide: 100;">
								<div class="uk-container">
									<div class="dropdown-menu__inner">
										<div class="uk-grid">
											<div class="uk-width-1-2@m">
												<div class="title-h1">В нашем каталоге
													<br>
													более 30 производителей</div>

												<div class="brands-pictures">
													<ul class="brands-pictures__list">
														{% for i in 1..13 %}
															<li class="brands-pictures__list-item"><img src="img/media/webp/brand-img-{{i}}.webp" alt="" loading="lazy"></li>
														{% endfor %}
													</ul>
													<a href="" class="uk-visible@m">Все производители</a>
												</div>
											</div>
											<div class="uk-width-1-2@m">
												<ul class="brands-titles">
													{% for i in 1..3 %}
														<li>
															{% for k in 1..18 %}
																<a href="">Brand-name-{{k}}</a>
															{% endfor %}
														</li>
													{% endfor %}
												</ul>
												<a href="" class="uk-hidden@m">Все производители</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="header-nav-buttons__item">
							<a href="" class="btn btn--white">Заявка на расчет</a>
						</div>
					</div>
				</div>
			</div>

			<div class="uk-width-expand">
				<div class="uk-flex uk-flex-middle uk-flex-between">
					<div class="search-desk uk-flex-grow">
						<form action="" class="search-form">
							<input type="text" placeholder="Поиск товара">
							<button>
								<svg width="24px" height="24px" class="icon-search">
									<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#search"></use>
								</svg>
							</button>
						</form>
					</div>

					<div class="toolbar-buttons">
						<div class="toolbar-buttons__favorite">
							<a href="favorite.html">
								<img src="img/icon-svg/fav.svg" width="22" height="24" alt="favorite" loading="lazy">
							</a>
						</div>
						<div class="toolbar-buttons__comparison">
							<a href="comparison.html">
								<svg width="14px" height="14px" class="icon-comparison">
									<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#comparison"></use>
								</svg>
							</a>
						</div>
						<div class="toolbar-buttons__basket">
							<div class="basket">
								<a href="order.html">
									<span class="basket__icon">
										<svg width="20px" height="19px" class="icon-cart">
											<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#cart"></use>
										</svg>

										<span class="basket__count">4</span>
									</span>
								</a>
							</div>
						</div>
						<div class="toolbar-buttons__auth">
							<a href="">
								<svg width="16px" height="19px" class="icon-user">
									<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#user"></use>
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end header-fixed -->
