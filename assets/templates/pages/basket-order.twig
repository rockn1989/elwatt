{% extends "../layouts/inner-page.twig" %}
{% set title="Оформление заказа" %}
{% set bread = ['Главная', 'Корзина', 'Оформление заказа'] %}

{% block content %}

	<!-- begin order-section -->
	<section class="order-section">
		<div class="uk-container">
			<h1>Оформление заказа</h1>

			<div class="order">
				<div class="uk-grid">
					<div class="uk-width-2-3@m">
						<form class="default-form order-form">

							<div class="order__header underline">
								<div class="radio-wrapper radio-wrapper">
									<label for="order-fiz" class="custom-radio">
										<input id="order-fiz" type="radio" name="order-type1">
										<span class="custom-radio__input"></span>
										<div class="custom-radio__label">Физическое лицо</div>
									</label>
									<label for="order-yor" class="custom-radio">
										<input id="order-yor" type="radio" name="order-type2" checked>
										<span class="custom-radio__input"></span>
										<div class="custom-radio__label">Юридическое лицо</div>
									</label>
								</div>
							</div>

							<div class="order__body">
								<div class="order__group">
									<div class="uk-grid">
										<div class="uk-width-2-5@m">
											<div class="title-h3">Ваши данные</div>
										</div>
										<div class="uk-width-3-5@m">
											<a href="#auth-modal" class="btn btn--white uk-margin-medium-bottom" uk-toggle>Войти в личный кабинет</a>

											<div class="form-group">
												<label for="order-name">Ваше имя</label>
												<input id="order-name" type="text">
											</div>
											<div class="form-group">
												<label for="order-surname">Фамилия</label>
												<input id="order-surname" type="text">
											</div>
											<div class="form-group">
												<label for="order-email">Электронная почта</label>
												<input id="order-email" type="text">
											</div>
											<div class="form-group">
												<label for="order-tel">Телефон</label>
												<input id="order-tel" type="text" class="js__input-mask">
											</div>
										</div>
									</div>
								</div>
								<div class="order__group">
									<div class="uk-grid">
										<div class="uk-width-2-5@m">
											<div class="title-h3">Доставка</div>
										</div>
										<div class="uk-width-3-5@m">
											<div class="radio-wrapper radio-wrapper">
												<label for="order-del1" class="custom-radio">
													<input id="order-del1" type="radio" name="order-type3">
													<span class="custom-radio__input"></span>
													<div class="custom-radio__label">Доставка</div>
												</label>
												<label for="order-del2" class="custom-radio">
													<input id="order-del2" type="radio" name="order-type3" checked>
													<span class="custom-radio__input"></span>
													<div class="custom-radio__label" checked>Самовывоз</div>
												</label>
											</div>

											<div class="delivery-types">
												<div class="delivery-types__item uk-hidden">
													lorem
												</div>
												<div class="delivery-types__item">
													<div class="small-title">Выберите адрес для самовывоза</div>
													<div class="radio-wrapper radio-wrapper--ver">
														<label for="order-add1" class="custom-radio">
															<input id="order-add1" type="radio" name="order-type" checked>
															<span class="custom-radio__input"></span>
															<div class="custom-radio__label">ТК «Мельница» 41-й километр МКАД</div>
														</label>
														<label for="order-add2" class="custom-radio">
															<input id="order-add2" type="radio" name="order-type">
															<span class="custom-radio__input"></span>
															<div class="custom-radio__label">«Синдика» 65-й километр МКАД</div>
														</label>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>

								<div class="order__group">
									<div class="uk-grid">
										<div class="uk-width-2-5@m">
											<div class="title-h3">оплата</div>
										</div>
										<div class="uk-width-3-5@m">
											<div class="radio-wrapper radio-wrapper--ver">
												<label for="order-pay1" class="custom-radio">
													<input id="order-pay1" type="radio" name="order-type">
													<span class="custom-radio__input"></span>
													<div class="custom-radio__label">Наличными курьеру</div>
												</label>
												<label for="order-pay2" class="custom-radio">
													<input id="order-pay2" type="radio" name="order-type" checked>
													<span class="custom-radio__input"></span>
													<div class="custom-radio__label">Оплата картой</div>
												</label>
												<label for="order-pay3" class="custom-radio">
													<input id="order-pay3" type="radio" name="order-type">
													<span class="custom-radio__input"></span>
													<div class="custom-radio__label">Оплата по счету как ЮРЛИЦО</div>
												</label>
											</div>
										</div>
									</div>
								</div>
								<div class="order__group">
									<div class="uk-grid">
										<div class="uk-width-2-5@m">
											<div class="title-h3">Комментарий к заказу</div>
										</div>
										<div class="uk-width-3-5@m">
											<textarea></textarea>
										</div>
									</div>
								</div>

								<div class="order__group">
									<div class="uk-grid">
										<div class="uk-width-2-5@m">
											<div class="title-h3">Итого</div>
										</div>
										<div class="uk-width-3-5@m">
											<div class="total-price">
												<div class="total-price__group">
													<div class="total-price__name">Сумма покупки</div>
													<div class="total-price__value">6 326.16 ₽</div>
												</div>
												<div class="total-price__group">
													<div class="total-price__name">Скидка</div>
													<div class="total-price__value">0 ₽</div>
												</div>
												<div class="total-price__group">
													<div class="total-price__name">Доставка</div>
													<div class="total-price__value">450 ₽</div>
												</div>
												<div class="total-price__group">
													<div class="total-price__name">Итого</div>
													<div class="total-price__value total-price__value--large">6 776.16 ₽</div>
												</div>
											</div>

											<button class="btn btn--lg">Оформить заказ</button>

											<div class="politics">
												Нажимая «Отправить заказ», вы соглашаетесь на обработку персональных данных в соответствии с
												<a href="">Политикой конфиденциальности</a>
											</div>
										</div>
									</div>
								</div>
							</div>

						</form>
					</div>
					<div class="uk-width-1-3@m uk-visible@m">
						<div class="right-sidebar" uk-sticky="media: @m; bottom: .order-form; offset: 82">
							<div class="right-sidebar__title">Ваш заказ</div>
							<div class="order-products-list">
								<div class="order-products-list__item">
									<div class="order-product">
										<div class="order-product__img">
											<img src="img/media/basket-img-1-80x80.png" alt="">
										</div>
										<div class="order-product__desc">
											<div class="order-product__title">
												<a href="">А2702. Автоматический выключатель SH201L С10А/1п/ 4,5кА на Din-рейку 2CDS241001R0104 C10 (ABB)</a>
											</div>
											<div class="order-product__price">765.30 ₽</div>
										</div>
									</div>
								</div>
								<div class="order-products-list__item">
									<div class="order-product">
										<div class="order-product__img">
											<img src="img/media/basket-img-2-80x80.png" alt="">
										</div>
										<div class="order-product__desc">
											<div class="order-product__title">
												<a href="">А2703. Автоматический выключатель SH201L С16А/1п/ 4,5кА на Din-рейку 2CDS241001R0164 C16 (ABB)</a>
											</div>
											<div class="order-product__price">417.66 ₽</div>
										</div>
									</div>
								</div>
								<div class="order-products-list__item">
									<div class="order-product">
										<div class="order-product__img">
											<img src="img/media/basket-img-3-80x80.png" alt="">
										</div>
										<div class="order-product__desc">
											<div class="order-product__title">
												<a href="">А0204. Автоматический выключатель BMS411 С20А/1п/ 4,5кА на Din-рейку 2CDS641041R0204 (ABB)</a>
											</div>
											<div class="order-product__price">309.24 ₽</div>
										</div>
									</div>
								</div>
								<div class="order-products-list__total">
									<span>Итого</span>
									<span>6 326.16 ₽</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- end order-section -->

{% endblock %}
