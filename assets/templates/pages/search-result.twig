{% extends "../layouts/inner-page.twig" %}
{% set title="Результат поиска" %}
{% set bread = ['Главная'] %}

{% block content %}

	<!-- begin search-result-section -->
	<section class="search-result-section">
		<div class="uk-container">
			<div class="underline">
				<div class="uk-grid" uk-grid>
					<div class="uk-width-2-5@m">

						<form action="" class="default-form search-form-result">
							<div class="form-group">
								<label for="search-form-input">Введите запрос</label>
								<input id="search-form-input" type="text">
							</div>
							<button type="submit" class="btn btn--white">Найти</button>
						</form>

					</div>
					<div class="uk-width-2-5@m">
						<div class="search-count title-h2">3 категории и 18 товаров</div>
					</div>
				</div>
			</div>
			<div class="additional-product-list uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-grid" uk-grid>
				<div class="uk-width-1-2@s uk-width-1-3@m uk-width-1-4@l">
					<div class="additional-product">
						<div class="additional-product__img">
							<img src="img/media/sliders/add-img-66x66-1.png" alt="" loading="lazy">
						</div>
						<div class="additional-product__text">
							<a href="" tabindex="0">Щиты распределительные</a>
						</div>
					</div>
				</div>
				<div class="uk-width-1-2@s uk-width-1-3@m uk-width-1-4@l">
					<div class="additional-product">
						<div class="additional-product__img">
							<img src="img/media/sliders/add-img-66x66-2.png" alt="" loading="lazy">
						</div>
						<div class="additional-product__text">
							<a href="" tabindex="0">Магнитные пускатели и контакторы</a>
						</div>
					</div>
				</div>
				<div class="uk-width-1-2@s uk-width-1-3@m uk-width-1-4@l">
					<div class="additional-product">
						<div class="additional-product__img">
							<img src="img/media/sliders/add-img-66x66-3.png" alt="" loading="lazy">
						</div>
						<div class="additional-product__text">
							<a href="" tabindex="0">Стабилизаторы напряжения</a>
						</div>
					</div>
				</div>
			</div>

			<div class="catalog">
				<div class="catalog__header">

					<div class="sort">
						<div class="sort__title">Сортитировать по:</div>
						<ul class="sort__list">
							<li>
								<a href="#" class="sort-up">
									цене

									<svg width="14px" height="12px" class="">
										<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#arrow-up"></use>
									</svg>
								</a>
							</li>
							<li>
								<a href="#">названию</a>
							</li>
							<li>
								<a href="#">популярности</a>
							</li>
						</ul>
					</div>
				</div>

				<div class="catalog__body">
					<div class="uk-grid uk-grid-collapse">
						{% for i in 1..8 %}
							<div class="uk-width-1-2@s uk-width-1-4@l">
								<div class="product-card">
									<header class="product-card__header">
										<div class="product-card__img" uk-lightbox>
											<a href="img/media/catalog/catalog-img-{{i}}.png">
												<img src="img/media/catalog/catalog-img-{{i}}.png" alt="" loading="lazy">
											</a>
										</div>
										<div class="stocks">
											<div class="stocks__hit">хит</div>
											<div class="stocks__new">новое</div>
										</div>
										<div class="product-card__toolbar">
											<a href="" class="favorite"></a>
											<a href="" class="comparison"></a>
										</div>
									</header>
									<section class="product-card__body">
										<div class="product-card__title">
											<a href="">Aвтоматический выключатель ABB 1-полюсный SH201L C10 однофазный</a>
										</div>
										<div class="product-card__footer">
											<div class="product-card__prices">
												<div class="old-price">323.16 ₽</div>
												<div class="current-price">306.06 ₽</div>
											</div>
											<div class="product-card__controls">
												<div class="calc">
													<span class="calc__min">
														<svg width="16px" height="24px" class="icon-minus">
															<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#minus"></use>
														</svg>
													</span>
													<input type="text" class="calc__value" value="1">
													<span class="calc__plus">
														<svg width="16px" height="24px" class="icon-plus">
															<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#plus"></use>
														</svg>
													</span>
												</div>
												<a href="" class="btn btn--red btn--icon">
													<svg width="20px" height="19px" class="icon-cart">
														<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="img/icon-svg/sprite/sprite.svg#cart"></use>
													</svg>
													В Корзину
												</a>
											</div>
										</div>
									</section>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>

				<div class="catalog__footer">
					<div class="pagination-wrapper">
						<div class="load-more btn btn--white">Показать еще</div>

						{% include "../includes/components/pagination.twig" %}
					</div>

				</div>
			</div>
		</div>
	</section>
	<!-- end search-result-section -->

{% endblock %}
