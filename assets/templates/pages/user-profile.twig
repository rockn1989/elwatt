{% extends "../layouts/left-c-page.twig" %}
{% set title="Личные данные" %}
{% set bread = ['Главная', 'Личные данные'] %}

{% block leftside %}
	{% include "../includes/partials/favorites-menu.twig" with {'active': 'Личные данные'} %}
{% endblock %}
{% block content %}
	<!-- begin content-section -->
	<section class="content-section">
		<div class="uk-container">
			<h1>Личные данные</h1>

			<form action="" class="default-form uk-margin-large-bottom@m">
				<div class="form-group form-group--md">
					<label for="pr-name">Ваше имя</label>
					<input id="pr-name" type="text">
				</div>

				<div class="form-group form-group--md">
					<label for="pr-surname">Фамилия</label>
					<input id="pr-surname" type="text">
				</div>

				<div class="form-group form-group--sm">
					<label for="pr-date">Дата рождения</label>
					<input id="pr-date" type="date">
				</div>

				<div class="form-group form-group--md">
					<label for="pr-email">Электронная почта</label>
					<input id="pr-email" type="text">
				</div>

				<div class="form-group form-group--md">
					<label for="pr-tel">Телефон</label>
					<input id="pr-tel" type="text" class="js__input-mask">
				</div>

				<div class="form-buttons">
					<button type="submit" class="btn btn--white btn--md">Сохранить</button>
					<button type="reset" class="btn btn--white btn--no-border">Отменить</button>
				</div>
			</form>

			<div class="title-h3">Сменить пароль</div>
			<form action="" class="default-form">
				<div class="form-group form-group--md">
					<label for="pr-pass1">Старый пароль</label>
					<input id="pr-pass1" type="password">
				</div>

				<div class="form-group form-group--md">
					<div class="password-container">
						<label for="pr-pass2">Новый пароль</label>
						<input id="pr-pass2" type="password">
						<i class="icon-eye-close"></i>
					</div>
				</div>

				<div class="form-group form-group--md">
					<label for="pr-pass3">Повторите новый пароль</label>
					<input id="pr-pass3" type="text">
				</div>

				<div class="form-group form-group--md">
					<a href="">Сгенерировать надежный пароль</a>
				</div>

				<div class="form-buttons">
					<button type="submit" class="btn btn--white btn--md" disabled>Изменить пароль</button>
				</div>
			</form>
		</div>
	</section>
	<!-- end content-section -->
{% endblock %}
