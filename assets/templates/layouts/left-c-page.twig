<!DOCTYPE html>
<html lang="ru">
	{% include "../includes/head.twig" %}
	<body>
		<div class="page-wrapper">
			{% include "../includes/header.twig" %}
			{% include "../includes/components/breadcrumbs.twig" %}
			<main
				class="main">
				<!-- begin inner-page-section -->
				<section class="inner-page-section">
					<div class="uk-container">
						<div class="uk-grid">
							<div class="uk-width-auto@l">
								<div class="left-sidebar">
									<div class="sidebar-btn sidebar-btn--gray js__toggle-sidebar uk-hidden@l">
										Открыть раздел
										<i class="sidebar-btn__icon">
											<img src="img/icon-svg/drop-down-gray.svg" width="12" height="6" alt="">
										</i>
									</div>
									<div class="left-sidebar__inner left-sidebar__inner--right-border"> {% block leftside %}{% endblock %}
										</div>
									</div>
								</div>
								<div class="uk-width-expand@l"> {% block content %}{% endblock %}
									</div>
								</div>
							</div>
						</section>
						<!-- end inner-page-section -->
					</main>
					{% include "../includes/footer.twig" %}
					{% include "../includes/modals/index.twig" %}
				</div>
				{% include "../includes/scripts.twig" %}
			</body>
		</html>
